<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Customer:etc/sections.xsd">
    <action name="multiwishlist/index/assignWishlist">
        <section name="wishlist"/>
    </action>
    <action name="multiwishlist/index/delete">
        <section name="wishlist"/>
    </action>
    <action name="multiwishlist/index/copy">
        <section name="wishlist"/>
        <section name="cart"/>
    </action>
    <action name="multiwishlist/index/assignWishlistFromCart">
        <section name="wishlist"/>
        <section name="cart"/>
    </action>
    <action name="multiwishlist/index/allCart">
        <section name="wishlist"/>
        <section name="cart"/>
    </action>
</config>
